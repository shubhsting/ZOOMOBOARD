doctype html
head
  title Login Here
  link(rel='stylesheet' type='text/css' href='css/style.css')
  link(href='https://fonts.googleapis.com/css?family=Poppins:600&display=swap' rel='stylesheet')
  script(src='https://kit.fontawesome.com/a81368914c.js')
  meta(name='viewport' content='width=device-width, initial-scale=1')
img.wave(src='images/wave.png')
.container
  .img
    img(src='images/bg.svg')
  .login-content
    .form
      img(src='images/avatar.svg')
      h2.title LOGIN
      .input-div.one
        .i
          i.fas.fa-user
        .div
          h5 Username
          input.input.loginemail(type='text')
      .input-div.pass
        .i
          i.fas.fa-lock
        .div
          h5 Password
          input.input.loginpassword(type='password')
      a(href='/signup') Forgot Password?
      .error
      input.btn.loginbutton(type='submit' value='Login')
script(type='text/javascript' src='js/main.js')
script(type='text/javascript' src='js/bundle.js')
